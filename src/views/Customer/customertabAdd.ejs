<%-include("../Home/header")-%>
  <div class="flex ">
    <%-include("../Home/sidebar")-%>
      <!-- main star -->
      <main class="bg-custom4-700 w-11/12  bg-Pattren2 ">
        <div id="Customer" class=" w-full h-full   overflow-hidden relative ">
          <div class="overlay bg-custom1-700  bg-opacity-70 p-4 w-full h-full  overflow-y-scroll absolute ">
            <!-- content start -->
            <div class="Addcustomer  customerTab" id="customerTab2">
              <div class="min-h-screen p-6  flex flex-col justify-start bg-Pattern1">
                <div class="container max-w-screen-lg mx-auto">
                  <div>
                    <div class=" rounded   md:p-8 mb-6 ">
                      <div class="grid gap-2 gap-y-2 text-sm grid-cols-1 ">
                        <div class="text-white mb-12">
                          <p class=" text-2xl font-bold">Enter Customer Detail</p>
                          <p>Kindly provide all the necessary details in the form below to
                            facilitate the addition of a new client to our system. Your accurate
                            and complete information ensures a seamless onboarding process and
                            helps us better serve our clients.</p>
                        </div>
                        <form action="\Customer" method="post">
                          <div class="lg:col-span-2">
                            <div class="grid gap-4 gap-y-2 text-base grid-cols-1 md:grid-cols-5">
                              <div class="md:col-span-5">
                                <label for="full_name">Full Name <span
                                    class="text-red-500 text-base font-semibold">*</span></label>
                                <input type="text"  name="full_name" id="full_name"
                                  class="h-10 border text-black mt-1 rounded px-4 w-full bg-gray-50" placeholder="Name" value="" />
                              </div>
                              <div class="md:col-span-5">
                                <label for="email">Email </label>
                                <input type="text" name="email" id="email"
                                  class="h-10 border text-black mt-1 rounded px-4 w-full bg-gray-50" value=""
                                  placeholder="email@domain.com" />
                              </div>
                              <div class="md:col-span-3">
                                <label for="address">Address <span
                                    class="text-red-500 text-base font-semibold">*</span></label>
                                <input type="text" name="address" id="address"
                                  class="h-10 border text-black mt-1 rounded px-4 w-full bg-gray-50" value=""
                                  placeholder="Address" />
                              </div>
                              <div class="md:col-span-2">
                                <label for="phoneNumber">Phone Number <span
                                    class="text-red-500 text-base font-semibold">*</span></label>
                                <input type="text" name="phoneNumber" id="phoneNumber"
                                  class="h-10 border text-black mt-1 rounded px-4 w-full bg-gray-50" value=""
                                  placeholder="xxxx-xxxxxxx" />
                              </div>
                              <div class="md:col-span-5 text-right mt-10">
                                <div class="inline-flex items-end">
                                  <button
                                    class="bg-custom3-500 hover:bg-custom3-700 text-white font-bold py-2 px-4 rounded mt-4">Add
                                    Customer</button>
                                </div>
                                <div class="inline-flex items-end">
                                  <button type="button" onclick="window.location.href = '/Customer'"
                                    class="bg-custom2-500 hover:bg-custom2-700 text-white font-bold py-2 px-4 rounded mt-4">
                                    Back</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- content end -->
          </div>
        </div>
      </main>
      <!-- main star -->
  </div>
  <!-- ======================================================================================================= -->
  <%-include("../Home/footer")-%>